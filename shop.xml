  <property name="project.jdk.home" value="${jdk.home.9.0}"/>
  <property name="project.jdk.bin" value="${jdk.bin.9.0}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.9.0"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.gson-2.8.2.classpath">
    <pathelement location="${basedir}/../../Downloads/gson-2.8.2.jar"/>
  </path>
  
  <path id="library.mysql-connector-java-5.1.39-bin.classpath">
    <pathelement location="${basedir}/../UwezoBank/mysql-connector-java-5.1.39-bin.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module shop -->
  
  <dirname property="module.shop.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.shop" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.shop" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.shop" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.shop" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
  
  <property name="shop.output.dir" value="${module.shop.basedir}/out/production/shop"/>
  <property name="shop.testoutput.dir" value="${module.shop.basedir}/out/test/shop"/>
  
  <path id="shop.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="shop.module.production.classpath">
    <path refid="${module.jdk.classpath.shop}"/>
    <path refid="library.mysql-connector-java-5.1.39-bin.classpath"/>
    <path refid="library.gson-2.8.2.classpath"/>
  </path>
  
  <path id="shop.runtime.production.module.classpath">
    <pathelement location="${shop.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.39-bin.classpath"/>
    <path refid="library.gson-2.8.2.classpath"/>
  </path>
  
  <path id="shop.module.classpath">
    <path refid="${module.jdk.classpath.shop}"/>
    <pathelement location="${shop.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.39-bin.classpath"/>
    <path refid="library.gson-2.8.2.classpath"/>
  </path>
  
  <path id="shop.runtime.module.classpath">
    <pathelement location="${shop.testoutput.dir}"/>
    <pathelement location="${shop.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.39-bin.classpath"/>
    <path refid="library.gson-2.8.2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.shop">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.shop">
    <patternset refid="excluded.from.module.shop"/>
  </patternset>
  
  <path id="shop.module.sourcepath">
    <dirset dir="${module.shop.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.shop" depends="compile.module.shop.production,compile.module.shop.tests" description="Compile module shop"/>
  
  <target name="compile.module.shop.production" depends="register.custom.compilers" description="Compile module shop; production classes">
    <mkdir dir="${shop.output.dir}"/>
    <javac2 destdir="${shop.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.shop}/javac">
      <compilerarg line="${compiler.args.shop}"/>
      <bootclasspath refid="shop.module.bootclasspath"/>
      <classpath refid="shop.module.production.classpath"/>
      <src refid="shop.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.shop"/>
    </javac2>
    
    <copy todir="${shop.output.dir}">
      <fileset dir="${module.shop.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.shop.tests" depends="register.custom.compilers,compile.module.shop.production" description="compile module shop; test classes" unless="skip.tests"/>
  
  <target name="clean.module.shop" description="cleanup module">
    <delete dir="${shop.output.dir}"/>
    <delete dir="${shop.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.shop, clean.artifact.javafxapp" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.shop" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.javafxapp" value="${basedir}/out/artifacts/JavaFXApp"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.JavaFXApp" value="${artifacts.temp.dir}/JavaFXApp.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.9.0}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.javafxapp" description="clean JavaFXApp artifact output">
    <delete dir="${artifact.output.javafxapp}"/>
  </target>
  
  <target name="artifact.javafxapp" depends="init.artifacts, compile.module.shop" description="Build &#39;JavaFXApp&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.javafxapp}"/>
    <copy todir="${artifact.temp.output.JavaFXApp}">
      <fileset dir="${shop.output.dir}"/>
    </copy>
    <copy file="${basedir}/../../Downloads/gson-2.8.2.jar" tofile="${artifact.temp.output.JavaFXApp}/gson-2.8.2.jar"/>
    <copy file="${basedir}/../UwezoBank/mysql-connector-java-5.1.39-bin.jar" tofile="${artifact.temp.output.JavaFXApp}/mysql-connector-java-5.1.39-bin.jar"/>
    <fx:fileset id="all_but_JavaFXApp" dir="${artifact.temp.output.JavaFXApp}" includes="**/*.jar">
      <exclude name="JavaFXApp.jar"/>
    </fx:fileset>
    <fx:fileset id="all_JavaFXApp" dir="${artifact.temp.output.JavaFXApp}" includes="**/*.jar"/>
    <fx:application id="JavaFXApp_id" name="JavaFXApp" mainClass="sample.Main"/>
    <fx:jar destfile="${artifact.temp.output.JavaFXApp}/JavaFXApp.jar">
      <fx:application refid="JavaFXApp_id"/>
      <fileset dir="${artifact.temp.output.JavaFXApp}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_JavaFXApp"/>
      </fx:resources>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.JavaFXApp}/deploy" outfile="JavaFXApp">
      <fx:application refid="JavaFXApp_id"/>
      <fx:resources>
        <fx:fileset refid="all_JavaFXApp"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.javafxapp}">
      <fileset dir="${artifact.temp.output.JavaFXApp}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.JavaFXApp}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.javafxapp" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>